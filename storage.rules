rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin or agent
    function isAdminOrAgent() {
      return isAuthenticated() && 
             (firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'agent');
    }
    
    // Listing images - admins and agents can upload
    match /listings/{listingId}/{allPaths=**} {
      allow read: if true; // Anyone can read listing images
      allow write: if isAdminOrAgent(); // Admins and agents can upload listing images
    }
    
    // Project images - admins and agents can upload
    match /projects/{projectId}/{allPaths=**} {
      allow read: if true; // Anyone can read project images
      allow write: if isAdminOrAgent(); // Admins and agents can upload project images
    }
    
    // Profile images - users can only upload their own profile image
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can read profile images
      allow write: if isAuthenticated() && request.auth.uid == userId; // Users can only upload their own profile image
    }
    
    // Deny all other storage access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
